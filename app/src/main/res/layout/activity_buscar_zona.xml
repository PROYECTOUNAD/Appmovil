<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buscarZona">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="1dp"
        android:background="#039235"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ubicacion1" />
        </LinearLayout>

        <Button
            android:id="@+id/miUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnMiUbicacion" />

        <Button
            android:id="@+id/sitiosReciclaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnUbicacion" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>