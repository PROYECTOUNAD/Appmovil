<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principal">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/aprendeR"
        app:srcCompat="@drawable/reciclajes"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/reciclarR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:autoText="false"
        android:backgroundTint="#039235"
        android:lineSpacingExtra="8sp"
        android:text="Acumula Puntos"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toTopOf="@+id/cerrarSesion"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/zonasR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#039235"
        android:lineSpacingExtra="8sp"
        android:text="Zonas de Reciclaje"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toTopOf="@+id/reciclarR"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/aprendeR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#039235"
        android:lineSpacingExtra="8sp"
        android:text="Aprende a Reciclar"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toTopOf="@+id/zonasR"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/cerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#039235"
        android:text="@string/salir"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>